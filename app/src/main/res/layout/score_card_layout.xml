<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_gravity="center"
    android:layout_margin="@dimen/card_margin"
    card_view:cardElevation="6dp"
    card_view:cardMaxElevation="10dp"
    card_view:cardCornerRadius="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_margin="10dp"
                android:textColor="#000"
                android:id="@+id/score_percentage"
                android:text="Percentage : 88.00%"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#000"
                android:layout_margin="10dp"
                android:id="@+id/score_cpercentage"
                android:text="CreditPercentage: 88.00%"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#000"
                android:layout_margin="10dp"
                android:id="@+id/score_urank"
                android:text="University Rank : 45"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_margin="10dp"
                android:id="@+id/score_crank"
                android:textColor="#000"
                android:text="College Rank : 12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_margin="10dp"
                android:id="@+id/score_total"
                android:textColor="#000"
                android:text="Total Marks Obtained : 450/1000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_margin="10dp"
                android:id="@+id/score_credit"
                android:textColor="#000"
                android:text="Credit Secured : 27"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
