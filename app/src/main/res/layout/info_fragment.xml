<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:padding="@dimen/show_padding"
            android:scrollbars="none">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Himanshu"
                android:textColor="@color/black"
                android:textSize="@dimen/student_size"/>

            <TextView
                android:id="@+id/branch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:text="Computer Science And Engineering(CSE)"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sub_size"/>

            <TextView
                android:id="@+id/college_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/branch"
                android:text="Maharaja Surajmal Institute of Technology"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sub_size"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ll_margin_top"
                android:text="@string/roll"
                android:textColor="@color/light_blue_500"
                android:textSize="@dimen/text_size"/>

            <TextView
                android:id="@+id/roll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03015002715"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
