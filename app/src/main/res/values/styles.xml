<resources>
    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>
    <style name="toolbar_theme" parent="MyMaterialTheme">
        <item name="colorControlNormal">@color/white</item>
    </style>
    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#000</item>
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
    </style>
    <style name="yourstyle" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="DialogAnimation_2">
        <item name="android:windowEnterAnimation">@anim/slide_left</item>
        <item name="android:windowExitAnimation">@anim/slide_right</item>
    </style>
</resources>
