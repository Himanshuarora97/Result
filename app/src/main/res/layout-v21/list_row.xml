<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/action_container"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:elevation="5dp"
        android:layout_margin="@dimen/card_margin"
        card_view:cardBackgroundColor="#227585"
        card_view:cardCornerRadius="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/exam_layout"
                android:textColor="#fff"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:textSize="20sp"/>


            <TextView
                android:textColor="#fff"
                android:textSize="15sp"
                android:text="Internal Marks : 98"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/internal"
                android:padding="10dp"
                android:layout_above="@+id/external"
                />
            <TextView
                android:textColor="#fff"
                android:textSize="15sp"
                android:text="External Marks : 98"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/external"
                android:padding="10dp"
                android:layout_alignParentBottom="true"
                 />


            <TextView
                android:textColor="#fff"
                android:textSize="20sp"
                android:id="@+id/marks_layout"
                android:text="Marks : 98(A+)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_alignTop="@+id/internal"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>